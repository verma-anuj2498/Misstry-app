<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/buttna"
    tools:context="com.example.black_pearl.im2.Scheduleservice">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Problem Description"
        android:layout_gravity="center"
        android:gravity="top"
        android:padding="15dp"
        android:background="@drawable/edittextcustom"
        android:layout_margin="25dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="date"
        android:layout_gravity="center"
        android:gravity="top"
        android:padding="15dp"
        android:background="@drawable/edittextcustom"
        android:layout_margin="25dp"
        android:inputType="date"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="time"
        android:layout_gravity="center"
        android:gravity="top"
        android:background="@drawable/edittextcustom"
        android:padding="15dp"
        android:layout_margin="25dp"
        android:inputType="time"
        />

    <Button     android:id="@+id/book_schedule_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:layout_gravity="center"
        android:padding="15dp"
        android:textColor="#fff"
        android:background="@drawable/buttn"
        android:textSize="15dp"
        android:layout_marginTop="25dp"
        />

</LinearLayout>
